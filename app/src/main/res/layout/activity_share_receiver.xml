<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="64dp"
    tools:context=".ui.ShareReceiverActivity">

    <RelativeLayout
        android:id="@+id/share_receiver_picker_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/share_receiver_picker_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/share_receiver_picker_title"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/share_receiver_picker_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_receiver_picker_label"
            android:layout_marginTop="24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_receiver_error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/share_receiver_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/share_receiver_error_message"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/share_error_title__default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/share_receiver_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/share_receiver_error_button"
            android:layout_centerHorizontal="true"
            android:text="@string/share_error_message__default"
            android:textSize="14sp" />

        <Button
            android:id="@+id/share_receiver_error_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/share_error_button_text" />

    </RelativeLayout>

</RelativeLayout>